<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:paddingTop="30dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/head_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        >
    <TextView
        android:id="@+id/user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gray1"
        android:text="欢迎回来"/>
    <TextView
        android:id="@+id/use_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/gray1"
        android:text=""/>
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/gray1"
        android:text="电话：15300099223"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/gray1"
        android:layout_gravity="right"
        android:visibility="visible"
        android:text="星期一"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_ll"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:visibility="gone"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        >

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:contentPadding="25dp"
        android:id="@+id/khs_answer"
        app:cardBackgroundColor="@color/pk_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:visibility="visible"
        android:background="@color/gray1"
     >
        <TextView
            android:id="@+id/recyclerb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="倍数与因数"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:contentPadding="25dp"
        android:visibility="visible"
        android:id="@+id/yh_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/pk_blue"
        android:layout_alignParentRight="true"
        android:background="@color/gray1"
     >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="2,3,5,9的倍数"/>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:contentPadding="25dp"
            android:id="@+id/cy_answer"
            app:cardBackgroundColor="@color/pk_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="25dp"
            android:visibility="visible"
            android:background="@color/gray1"
            >
            <TextView
                android:id="@+id/cyrb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="质数"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:contentPadding="25dp"
            app:cardBackgroundColor="@color/pk_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_marginTop="10dp"
            android:id="@+id/sj_answer"
            android:visibility="visible"
            android:background="@color/gray1"
            >
            <TextView
                android:id="@+id/my_car_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="挑战模式"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            app:contentPadding="25dp"
            app:cardBackgroundColor="@color/pk_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/other_answer"
            android:layout_marginTop="10dp"
            android:padding="25dp"
            android:visibility="gone"
            android:background="@color/gray1"
            >
            <TextView
                android:id="@+id/otherrb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="其他垃圾试题"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="倍数概念"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:text="2,3,5,9的倍数概念"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="质数倍数概念"/>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/edit_sea"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/head_ll"
        android:background="@drawable/login_input"
        android:hint="输入信息"
        android:textSize="14sp"
        android:padding="10dp"
        android:text="" />
    <RelativeLayout
        android:id="@+id/student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pk_blue"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:text="显示全部>>"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recyclerview"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/working"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/dec"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="正在进行家政服务...\n完成服务请点击完成按钮"
                />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:hint="请输入标题"
                android:visibility="gone"
                android:background="@null"
                android:textColor="@color/textColor"
                android:textColorHint="@color/gray3"
                android:textSize="16sp"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/ok"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/publish"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/publish"/>
</RelativeLayout>