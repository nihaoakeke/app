<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/view_title"
        android:id="@+id/tl"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:layout_margin="10dp"

        >
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"

                android:src="@drawable/user"
                />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="标题："
                />

            <TextView
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:hint="请输入标题"
                android:background="@null"
                android:textColor="@color/textColor"
                android:textColorHint="@color/gray3"
                android:textSize="16sp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tz"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/radioGroupUnassured1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:layout_below="@+id/tz"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/jd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray1"
                android:checked="false"
                android:text="简单模式" />

            <RadioButton
                android:id="@+id/yb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray1"
                android:text="一般模式" />
            <RadioButton
                android:id="@+id/kn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray1"
                android:layout_marginLeft="2dp"
                android:text="困难模式" />



        </RadioGroup>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/radioGroupUnassured1"
            android:src="@drawable/user"
            />
        <LinearLayout
            android:id="@+id/chapter_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/radioGroupUnassured1"
            android:orientation="horizontal"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="章节"
                android:layout_margin="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/chapter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:background="@null"
                android:textColor="@color/textColor"
                android:textColorHint="@color/gray3"
                android:textSize="16sp"
                />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/chapter_ll"
            android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/chapter_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/chapter_ll"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故事内容："
                android:visibility="gone"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/chapter_content_edw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:background="@null"
                android:textColor="@color/textColor"
                android:textColorHint="@color/gray3"
                android:textSize="16sp"
                />

        </LinearLayout>
        </ScrollView>
<TextView
    android:id="@+id/count"
    android:layout_width="wrap_content"
    android:text="第1页"
    android:layout_margin="15dp"
    android:textSize="18sp"
    android:layout_alignParentRight="true"
    android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btn_next_chapter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="25dp"
            android:paddingRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:onClick="registerClick"
            android:text="下一章"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btn_next_chapter"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="25dp"
            android:paddingRight="15dp"
            android:background="@drawable/login_btn_reg"
            android:gravity="center"
            android:visibility="gone"
            android:onClick="registerClick"
            android:text="完成发布"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            />

</RelativeLayout>

</LinearLayout>